<body>
  <h1>⭐ Trouve l'intrus : Sauve les insectes !</h1>
  <p>Parmi ces images, un seul n'est pas un insecte menacé. Clique sur l'intrus !</p>

  <div class="game-area" id="gameArea"></div>
  <div class="message" id="message"></div>

  <script>
    const items = [
      "Abeille",
      "Papillon",
      "Coccinelle",
      "Libellule",
      "Drone",
      "Sauterelle",
      "Fourmi",
      "Scarabée"
    ];

    const correctAnswer = "Drone";

    function shuffle(array) {
      return array.sort(() => Math.random() - 0.5);
    }

    function displayGame() {
      const shuffled = shuffle([...items]);
      const gameArea = document.getElementById("gameArea");
      gameArea.innerHTML = "";
      const message = document.getElementById("message");
      message.textContent = "";

      shuffled.forEach(item => {
        const div = document.createElement("div");
        div.className = "item";
        div.textContent = item;
        div.onclick = () => {
          if (item === correctAnswer) {
            message.textContent = "✅ Bien joué ! Le drone est l'intrus.";
            message.style.color = "green";
          } else {
            message.textContent = "❌ Non, " + item + " est un insecte menacé.";
            message.style.color = "red";
          }
        };
        gameArea.appendChild(div);
      });
    }

    displayGame();
  </script>
</body>
</html>
